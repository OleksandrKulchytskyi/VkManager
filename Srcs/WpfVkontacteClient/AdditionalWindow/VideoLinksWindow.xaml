<Window x:Class="WpfVkontacteClient.AdditionalWindow.VideoLinksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ссылки на видео для загрузки" Height="200" Width="300" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="0.24*" />
		</Grid.RowDefinitions>
		<TextBox x:Name="txtLinks" AcceptsReturn="True" AcceptsTab="True" Grid.Row="0"></TextBox>
		<Button x:Name="btnDownload" Grid.Row="1" Content="Начать загрузку" Click="btnDownload_Click" />
	</Grid>
</Window>